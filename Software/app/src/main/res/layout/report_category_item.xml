<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/primaryBabyBlue"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/category_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Kategorija"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primaryDarkBlue" />

    <TextView
        android:id="@+id/category_total_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="12sp"
        android:textColor="@color/primaryDarkBlue"
        android:gravity="center" />

    <TextView
        android:id="@+id/category_completed_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="12sp"
        android:textColor="@color/primaryDarkBlue"
        android:gravity="center" />

    <TextView
        android:id="@+id/category_rate_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0%"
        android:textSize="12sp"
        android:textColor="@color/primaryDarkBlue"
        android:gravity="center" />

    <TextView
        android:id="@+id/category_xp_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0 XP"
        android:textSize="12sp"
        android:textColor="@color/primaryDarkBlue"
        android:gravity="center" />

</LinearLayout> 