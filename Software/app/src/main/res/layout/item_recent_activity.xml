<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Naziv zadatka -->
        <TextView
            android:id="@+id/activity_task_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Naziv zadatka"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkBlue"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_xp_earned" />

        <!-- Kategorija -->
        <TextView
            android:id="@+id/activity_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kategorija"
            android:textSize="12sp"
            android:textColor="@color/primaryDarkBlue"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_task_name"
            app:layout_constraintEnd_toStartOf="@id/activity_xp_earned" />

        <!-- XP zarada -->
        <TextView
            android:id="@+id/activity_xp_earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+50 XP"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primaryDarkBlue"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Datum zavrÅ¡etka -->
        <TextView
            android:id="@+id/activity_completed_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.12. 14:30"
            android:textSize="11sp"
            android:textColor="@color/primaryDarkBlue"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_xp_earned" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView> 