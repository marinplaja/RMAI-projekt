<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Naslov -->
    <TextView
        android:id="@+id/completed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📋 Povijest zadataka"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primaryDarkBlue"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filter spinner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/filter_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/primaryBabyBlue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/completed_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍 Filter: "
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primaryDarkBlue" />

            <Spinner
                android:id="@+id/completed_filter_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Sažetak -->
    <androidx.cardview.widget.CardView
        android:id="@+id/summary_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/secondaryPeachPink"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/filter_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/completed_summary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Učitavanje sažetka..."
            android:textColor="@color/primaryDarkBlue"
            android:textSize="12sp"
            android:padding="12dp"
            android:lineSpacingExtra="2dp" />

    </androidx.cardview.widget.CardView>

    <!-- Lista završenih zadataka -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/completed_habits_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/summary_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Poruka kad je prazno -->
    <TextView
        android:id="@+id/completed_habits_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Još nema završenih zadataka.\nZavršite prvi zadatak da vidite povijest!"
        android:textSize="16sp"
        android:textColor="@color/primaryDarkBlue"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/completed_habits_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 